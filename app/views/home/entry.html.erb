        <button type="button" id='enter-hangout-room' class="btn btn-default g-btn g-btn-blue arial">Get Your Own Hangout URL
        </button>
    </div>
    <br>
    <h5 class='grey-text arial' style='margin:0 auto; padding:0px'>
        <i>
            (This opens in a new tab)
        </i>
    </h5>

    <div id='powered-by-container' class='row' style='margin-top:40px'>
        <h5 id='powered-by-text' class='grey-text arial'>
        Powered by&nbsp;&nbsp;&nbsp;
        </h5>
        <%= image_tag('/assets/img/logo.png', height:'50')%> 
    </div>
</div>